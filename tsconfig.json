{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "skipLibCheck": true,

    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}